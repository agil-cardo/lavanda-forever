<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=500, initial-scale=1">
		<title>
			{% block title %}Lavanda Forever!
			{% endblock %}
		</title>
		<link rel="stylesheet" href="https://bootswatch.com/4/solar/bootstrap.min.css">
		{# <link rel="stylesheet" href="{{ asset('/CSS/bootstrap.min.css')}}"> #}
		{% block stylesheets %}{% endblock %}
	</head>

	<body>
	
		<header>
			<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
				<a class="navbar-brand" href="{{ path('index') }}">Lavanda</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarColor01">
					<ul class="navbar-nav mr-auto">
						<li class="nav-item active">
							<a class="nav-link" href="{{ path('index') }}">Home sweet home
								<span class="sr-only">(current)</span>
							</a>
						</li>

						{% if app.user %}						
						<li class="nav-item">
							<a class="nav-link" href="{{ path('article') }}">Articles</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('mensajes') }}">Mensajes</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_logout') }}">DÃ©connexion</a>
						</li>
						{% else %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
						</li>
						{% endif %}

						<li class="nav-item">
							<a class="nav-link" href="{{ path('qui_page') }}">Qui sommes nous</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('contacta_nos') }}">Contactez Nous</a>
						</li>

						{% if is_granted("ROLE_ADMIN") %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('admin') }}">la oficina</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('ajouArticle') }}">Ajouter un article</a>
							</li>
						{% endif %}

					</ul>
					
				</div>
			</nav>
		</header>

		{# read and display all flash messages #}
		{% for label, messages in app.flashes %}
			{% for message in messages %}
				<div class="alert alert-{{ label }}">
					{{ message }}
				</div>
			{% endfor %}
		{% endfor %}

		<div class="container">
		{% block body %}{% endblock %}
		</div>

		{% block javascripts %}{% endblock %}
		<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

		</body>

	</html>
